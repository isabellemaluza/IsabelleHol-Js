theory Potencias
  imports Main
begin

text \<open>Casos base para potência: para naturais (nat) mostramos que n^0 = 1 e n^1 = n.\<close>

lemma pow_zero_nat: "n ^ 0 = (1 :: nat)"
  by simp

lemma pow_one_nat: "n ^ 1 = (n :: nat)"
  by simp

text \<open>Agora uma prova mais "explícita" para n^1 = n mostrando os passos (útil para entender como a definição de power funciona).\<close>

lemma pow_one_nat_explicit: "n ^ 1 = (n :: nat)"
proof -
  have "n ^ 1 = n ^ Suc 0" by simp
  also have "... = n * (n ^ 0)" by (simp add: power_Suc)
  also have "... = n * 1" by (simp add: pow_zero_nat)
  also have "... = n" by simp
  finally show ?thesis .
qed

text \<open>Versões para inteiros (int) e números reais (real) também valem — a biblioteca já provê os lemas por simplificação.\<close>

lemma pow_zero_int: "x ^ 0 = (1 :: int)"
  by simp

lemma pow_one_int: "x ^ 1 = (x :: int)"
  by simp

lemma pow_zero_real: "x ^ 0 = (1 :: real)"
  by simp

lemma pow_one_real: "x ^ 1 = (x :: real)"
  by simp

text \<open>Forma genérica (para tipos que suportam potência na classe apropriada):\<close>

lemma power_zero_gen: "a ^ 0 = (1 :: 'a::{power,one})"
  by simp

lemma power_one_gen: "a ^ 1 = (a :: 'a::{power,one})"
  by simp

end
